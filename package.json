{
  "name": "digital-signage",
  "description": "A powerful Digital Signage solution, built with React, Electron & TailwindCSS",
  "author": {
    "name": "The Shore Group",
    "email": "software@theshoregroup.co.uk"
  },
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start:react": "react-scripts start",
    "start": "concurrently \"cross-env BROWSER=none yarn start:react\" \"wait-on http://localhost:3000 && electron .\"",
    "build:react": "react-scripts build",
    "build:electron": "electron-builder",
    "build": "yarn build:react && build:electron",
    "release": "yarn build:react && build:electron --publish=always",
    "test:react": "react-scripts test --env=jsdom",
    "eject:react": "react-scripts eject"
  },
  "build": {
    "appId": "com.theshoregroup.co.uk"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "electron": "^16.0.0",
    "electron-builder": "^22.13.1",
    "wait-on": "^6.0.0"
  }
}
