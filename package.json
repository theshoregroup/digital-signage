{
  "name": "digital-signage",
  "description": "A powerful Digital Signage solution, built with React, Electron & TailwindCSS",
  "repository": {
    "type": "git",
    "url": "https://github.com/theshoregroup/digital-signage.git"
  },
  "author": {
    "name": "The Shore Group",
    "email": "software@theshoregroup.co.uk"
  },
  "version": "0.5.1",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start:react": "craco start",
    "start": "concurrently \"cross-env BROWSER=none yarn start:react\" \"wait-on http://localhost:3000 && electron .\"",
    "build:react": "craco build",
    "build:electron": "electron-builder",
    "build": "yarn build:react && yarn build:electron",
    "release": "yarn version:patch && yarn build --publish=always --mac dmg --linux snap",
    "test:react": "craco test --env=jsdom",
    "version:patch": "versiony package.json --patch",
    "version:minor": "versiony package.json --minor",
    "version:major": "versiony package.json --major",
    "eject:react": "react-scripts eject",
    "clear:dist": "rm -rf dist/",
    "clear:build": "rm -rf build/",
    "clear:node_modules": "rm -rf node_modules/",
    "clear:release_files": "yarn clear:dist && yarn clear:build",
    "refresh": "yarn clear:node_modules && yarn"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.22"
  },
  "dependencies": {
    "@craco/craco": "^6.4.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-fast-marquee": "^1.2.1",
    "react-scripts": "4.0.3",
    "rss-to-json": "^2.0.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9",
    "concurrently": "^6.4.0",
    "electron": "^16.0.0",
    "electron-builder": "^22.13.1",
    "postcss": "^7",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "versiony-cli": "^1.3.0",
    "wait-on": "^6.0.0"
  }
}