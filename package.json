{
  "name": "digital-signage",
  "description": "A powerful Digital Signage solution, built with React, Electron & TailwindCSS",
  "repository": {
    "type": "git",
    "url": "https://github.com/theshoregroup/digital-signage.git"
  },
  "author": {
    "name": "The Shore Group",
    "email": "software@theshoregroup.co.uk"
  },
  "contributors": [
    {
      "name": "Liam Doyle",
      "email": "limegorilla@gmail.com",
      "url": "https://limegorilla.co.uk"
    }
  ],
  "version": "1.5.11",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start:react": "react-scripts start",
    "start": "concurrently \"cross-env BROWSER=none yarn start:react\" \"wait-on http://localhost:3000 && electron .\" ",
    "build:react": "react-scripts build",
    "build:css": "tailwind build public/tailwind.css -o public/style.css",
    "build:electron": "electron-builder",
    "build": "yarn build:react",
    "release": "yarn refresh && yarn version:patch && yarn build --publish=always",
    "test:react": "react-scripts test --env=jsdom",
    "version:patch": "versiony package.json --patch",
    "version:minor": "versiony package.json --minor",
    "version:major": "versiony package.json --major",
    "eject:react": "react-scripts eject",
    "clear:dist": "rm -rf dist/",
    "clear:build": "rm -rf build/",
    "clear:node_modules": "rm -rf node_modules/",
    "clear:release_files": "yarn clear:dist && yarn clear:build",
    "refresh": "yarn clear:node_modules && yarn"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.22"
  },
  "dependencies": {
    "@ant-design/compatible": "^1.1.0",
    "@ant-design/icons": "^4.7.0",
    "@apollo/client": "^3.5.9",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "antd": "^4.18.4",
    "autoprefixer": "^10.4.0",
    "axios": "^0.24.0",
    "chart.js": "^3.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9",
    "graphql": "^16.3.0",
    "graphql-config": "^4.1.0",
    "moment": "^2.29.1",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.2.1",
    "react": "^17.0.2",
    "react-chartjs-2": "^4.0.1",
    "react-dom": "^17.0.2",
    "react-fast-marquee": "^1.3.1",
    "react-scripts": "next",
    "react-text-transition": "^1.3.0",
    "rss-to-json": "^2.0.2",
    "tailwindcss": "^3.0.10",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "electron": "^16.0.6",
    "electron-builder": "^22.13.1",
    "versiony-cli": "^1.3.0",
    "wait-on": "^6.0.0"
  }
}
